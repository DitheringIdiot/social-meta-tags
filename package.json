{
  "name": "social-preview-test",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "rollup": "rollup -c",
    "watch:sass": "sass --no-source-map --watch src/sass:src/_includes/css",
    "watch:eleventy": "npx @11ty/eleventy --serve --port=8081",
    "build:sass-site": "sass --no-source-map src/sass:src/_includes/css",
    "build:sass": "npm-run-all --parallel build:sass-site",
    "build:eleventy": "npx @11ty/eleventy",
    "postbuild": "postcss public/css/*.css -u autoprefixer cssnano -r",
    "start": "rollup -c && cross-env ELEVENTY_ENV=dev npm-run-all build:sass --parallel watch:*",
    "build": "rollup -c && cross-env ELEVENTY_ENV=prod npm-run-all build:sass build:eleventy social-images",
    "lint": "stylelint 'src/sass/**/*.scss' 'src/sass/**/**/*.scss' 'src/sass/**/**/**/*.scss'",
    "lint:fix": "stylelint --fix 'src/sass/**/*.scss' 'src/sass/**/**/*.scss' 'src/sass/**/**/**/*.scss'",
    "social-images": "eleventy-social-images --siteName 'Social Preview Test' --outputDir public --dataFile ./previews.json --stylesPath public/css/social.css",
    "bump": "npm --no-git-tag-version version"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@11ty/eleventy-plugin-rss": "^1.1.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "@11tyrocks/eleventy-plugin-social-images": "^0.1.3",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "concurrently": "^6.0.0",
    "cross-env": "^7.0.2",
    "gorko": "^0.2.3",
    "html-minifier": "^4.0.0",
    "jsdom": "^16.4.0",
    "markdown-it": "^12.0.4",
    "markdown-it-anchor": "^8.1.0",
    "markdown-it-attrs": "^4.0.0",
    "markdown-it-div": "^1.1.0",
    "markdown-it-footnote": "^3.0.3",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.44.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.35.2",
    "terser": "^5.6.1"
  }
}
