<!DOCTYPE html>
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width,initial-scale=1"/>
        <style>
            {% if style %}
                {% include "css/" + style + ".css" %}
            {% else %}
                {% include "css/critical.css" %}
            {% endif %}
        </style>
    </head>

    <body>

        {{ content | safe }}


        {% if script %}
            {% set js %}
            {% include script %}
            {% endset %}
        {% endif %}

        {% set fontloading %}
        {% include "public/scripts/font-loading.js" %}
        {% endset %}

        <script>

            {{ fontloading | safe }}

            {% if script %}
                {{ js | safe }}
            {% endif %}
        </script>
    </body>
</html>